<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_lockscreen_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_head_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_icon_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_icon_mine"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon_mine"
            android:text="未登录" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon_mine"
            android:layout_alignLeft="@+id/textView1"
            android:text="登陆后分享音乐"
            android:textColor="#949494" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_bg"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#000000" />
    </RelativeLayout>
    <!-- 分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
    <!-- 分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_play_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_play_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_play_mine"
            android:text="本地歌曲"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_play_more_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_press" />

        <ImageView
            android:id="@+id/iv_play_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_listmore_play_press" />

        <TextView
            android:id="@+id/tv_play_mine_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_play_more_mine"
            android:text="本地1首"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />
    </RelativeLayout>
    <!-- 分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_download_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon_mine"
            android:text="下载歌曲"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_press" />

        <ImageView
            android:id="@+id/iv_icon_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/iv_more"
            android:background="@drawable/ic_listmore_download_press" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_more"
            android:text="0首"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />
    </RelativeLayout>
    <!-- 分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_love_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon_mine"
            android:text="我喜欢"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_press" />

        <ImageView
            android:id="@+id/iv_icon_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/iv_more"
            android:background="@drawable/ic_listmore_love_press" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_more"
            android:text="0首"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />
    </RelativeLayout>
    <!-- 分割线 -->
    <!-- 分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_zuijin_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon_mine"
            android:text="最近播放"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_press" />

        <ImageView
            android:id="@+id/iv_icon_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/iv_more"
            android:background="@drawable/ic_listmore_love_press" />

        <TextView
            android:id="@+id/TextView023"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_more"
            android:text="0首"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/cmmusic_progress_1"
        android:visibility="gone" />


</LinearLayout>